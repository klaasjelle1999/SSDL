                                <div class="col-6">
                                    <img class="sponsor-image-homepage" src="{{ asset('assets/img/rolex_headsponsor.png') }}" alt="">
                                </div>
                                <div class="col-6">
                                    <img class="sponsor-image-homepage" src="{{ asset('assets/img/rolls_royce_headsponsor.png') }}" alt="">
                                </div>
                                <div class="col-6">
                                    <img class="sponsor-image-homepage" src="{{ asset('assets/img/gucci_headsponsor.png') }}" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
