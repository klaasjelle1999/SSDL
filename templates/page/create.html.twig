{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1 class="page-title">Pagina aanmaken</h1>
        <div class="page-options">
            <a class="btn btn-secondary" href="javascript:history.back()"><i class="fa fa-arrow-left"></i> Ga Terug</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group">
                <label class="form-label-sm">Pagina naam:</label>
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                <label class="form-label-sm">Pagina tekst:</label>
                {{ form_row(form.text) }}
            </div>
            <div class="form-group">
                <label class="form-label-sm">Zichtbaar voor:</label>
                {{ form_row(form.visibleTo) }}
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Verzenden</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
